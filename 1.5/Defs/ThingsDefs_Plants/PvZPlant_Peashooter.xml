<?xml version="1.0" encoding="utf-8" ?>


<ThingDef ParentName="PlantBase" Name="PeashooterBase" Abstract="True">
    <graphicData>
        <texPath>Plants/Peashooter/Mature_Peashooter</texPath>
        <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    

    <!--TODO: CHANGE TEXTRUE PATH FOR EVERYTHING-->
    <plant>
        <immatureGraphicPath>Plants/Peashooter/Immature_Peashooter</immatureGraphicPath>
        <growDays>28</growDays>
        <dieIfLeafless>false</dieIfLeafless>
        <harvestWork>400</harvestWork>
        <harvestTag>Standard</harvestTag>
        <harvestedThingDef>PvZPlant_RawPeashooter</harvestedThingDef>
        <harvestYield>8</harvestYield>
        <topWindExposure>0.1</topWindExposure>
        <visualSizeRange>0.3~1.0</visualSizeRange>
        <wildOrder>2</wildOrder>
        <allowAutoCut>false</allowAutoCut>
    </plant>

</ThingDef>


<ThingDef ParentName="PeashooterBase">
    <defName>PvZPlant_Peashooter</defName>
    <label>peashooter</label>
    <description>Growable weapon peashooter, can be crafted into an equippable weapon or a placeable turret</description>
    <plant>
        <growDays>14</growDays>
        <sowWork>250</sowWork>
        <sowMinSkill>8</sowMinSkill>
        <sowTags>
            <li>Ground</li>
            <li>Hydroponics</li>
        </sowTags>
        <purpose>Misc</purpose>
    </plant>
</ThingDef>



<ThingDef>
    <defName>PvZPlant_PeashooterWild</defName>
    <label>wile peashooter</label>
    <description>
        Wild Peashooter that grows in small bushes in the wild.
    </description>

    <neverMultiSelect>false</neverMultiSelect>

    <plant> 
        <wildClusterRadius>4</wildClusterRadius>
        <wildClusterWeight>80</wildClusterWeight>

        <wildBiomes>
            <TemperateForest>0.0</TemperateForest>
            <TemperateSwamp>0.05</TemperateSwamp>
            <BorealForest>0.16</BorealForest>
            <Tundra>0.04</Tundra> 
            <ColdBog>0.04</ColdBog>
        </wildBiomes>
    </plant>
</thingDef>


<ThingDef ParentName="PlantFoodRawBase">
        <defName>RawPeashooter</defName>
        <label>peashooter</label>
        <description>Raw Form of peashooters.</description>
        <soundInteract>Grain_Drop</soundInteract>
        <soundDrop>Grain_Drop</soundDrop>
        <graphicData>
            <texPath>Plants/Peashooter/Raw</texPath>
        </graphicData>
        <statBases>
            <MarketValue>1.1</MarketValue>
        </statBases>
        <ingestible>
            <foodType>Seed</foodType>
        </ingestible>
        <comps>
            <li Class="CompProperties_Rottable">
                <daysToRotStart>30</daysToRotStart>
                <rotDestroys>true</rotDestroys>
            </li>
        </comps>
    </ThingDef>

<RecipeDef>
    <defName>Peashooter_Make_Turret</defName>
    <label>make turret from the peashooter plant</label>
    <description>From the Peas that we get from the peashooter plant we can craft a turret that sits down on the ground.</description>
    <jobString>Making Turret from peashooter peas</jobString>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <workSkill>Crafting</workSkill>
    <workAmount>1200</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>     


        <!--TODO: Create own table and craft it in there-->
    <recipeUsers>
        <li>TableMachining</li>
    </recipeUsers>

    <ingredients>
        <li>
            <filter>
                <thingDefs>
                    <li>PvZPlant_Peashooter</li>
                </thingDefs>
            </filter>
            <count>18</count>
        </li>
    </ingredients>


    <fixedIngredientFilter>
        <thingDefs>
            <li>PvZPlant_Peashooter</li>
        </thingDefs>
    </fixedIngredientFilter>

    <products>
        <li>
            <ThingDef>Turret_MiniTurret</ThingDef>
            <count>1</count>
        </li>
    </products>
</RecipeDef>

